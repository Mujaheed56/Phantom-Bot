{
  "name": "phantom-bot",
  "description": "PHANTOM BOT - Feature-rich WhatsApp Bot",
  "repository": "https://github.com/Mujaheed56/Phantom-Bot",
  "logo": "",
  "keywords": ["whatsapp", "bot", "baileys", "phantom"],
  "env": {
    "SESSION_ID": {
      "description": "Your bot session ID from the pairing portal",
      "value": ""
